<!-- res/drawable/gradient_button_metallic.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#0A21F1"/>
            <corners android:radius="20dp"/>
            <padding android:bottom="4dp"/>
        </shape>
    </item>

    <!-- Metallic Gradient -->
    <item android:top="4dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#EADA48"
                android:endColor="#48EA5E"
                android:angle="90"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>

    <!-- Embossed Inner Layer -->
    <item android:left="7dp" android:right="7dp" android:top="7dp" android:bottom="7dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFF1F1"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>
</layer-list>
